<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
       <% if logged_in?%>
       <% if current_user.admin?%>
       <a>Status: Admin-User</a> 
       <% else %>
      <a>Status: Non-Admin User</a>
      <% end %>
      <%end%>
    </section>
  </aside>
</div>