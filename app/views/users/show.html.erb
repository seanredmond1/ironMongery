<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
       <% if logged_in?%>
       <% if @user.admin?%>
       <small><p>Status: Admin-User</p></small> 
       <% else %>
      <small><p>Status: Non-Admin User</p></small>
      <% end %>
      <%end%>
    </section>
  </aside>
</div>