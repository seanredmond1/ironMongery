<h1>Catalog</h1>

<table class="catalog">
    
    <% @product.each do |product| %>
    
    <tr>
        <td>
        <div class="image">
            <%= link_to (image_tag product.image, :style => "height:100px"), product %>
            
        </div>
        </td>
        
        <td>
            
        <div class = "half_page_width">
    
        <div class="title">
            <%= link_to product.title, product %>
        </div>
        
        <div class="description">
            <%= product.description %>
        </div>
        
        <div class="price">
            <%= number_to_currency(product.price, unit: "â‚¬") %>
        </div>
        
        <div class="links">

              <%= link_to 'Edit', edit_product_path(product) %> |
              <%= link_to 'Delete', product, :confirm => 'Are you sure?', :method => :delete %>

        </div>
        
        </div>
        
    
    </td>
    </tr>
    
    <% end %>
    </table>