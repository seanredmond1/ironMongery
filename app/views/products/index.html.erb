<h1>Catalog</h1>

<%= link_to "Add new product!", new_product_path, class: "btn btn-lg btn-primary" %>

<table class="Products">
    
    <% @product.each do |product| %>
    
        
    
    <tr>
        
        <td>
        <div class="image">
            <%= link_to (image_tag product.image, :style => "height:100px"), product %>
            
        </div>
        </td>
        
        <td>
            
        <div class = "half_page_width">
    
        <div class="title">
            <%= link_to product.title, product %>
        </div>
        
        <div class="description">
            <%= product.description %>
        </div>
        
        <div class="price">
            <%= number_to_currency(product.price, unit: "â‚¬") %>
        </div>
        
         <div class="links">
    
    <% if logged_in? %>
             <% if current_user.admin? %>
              <%= link_to 'Edit', edit_product_path(product) %> |
              <%= link_to 'Delete', product, :confirm => 'Are you sure?', :method => :delete %> |
              <% end %>
              <a href="/cart/<%= product.id %>">Add to Cart</a><br><br>
    <% end %>
        
        </div>
    </td>
    </tr>
    
       
    <% end %>
    </table>